@model BusinessObject.BusinessObject.Account
@*

    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Login";
}
<link rel="stylesheet" href="~/css/login.css" />
<main>
    <section>
        <form asp-action="Login" class="login">
            <div class="login-box">
                <h1 class="sign-in">Đăng Nhập</h1>
                <div class="field">
                    <label asp-for="Username">Tên Đăng Nhập</label>
                    <input asp-for="Username" type="text" id="username" class="input-field">
                </div>
                <div class="field">
                    <label asp-for="Password" for="password">Mật Khẩu</label>
                    <input asp-for="Password" type="password" id="password" class="input-field">
                </div>
                <div class="links">
                    <div class="remember">
                        <input type="checkbox" id="remember">
                        <label for="remember" class="normal">Ghi nhớ</label>
                    </div>
                    <div class="forget-password">Quên mật khẩu</div>
                </div>
                <button class="button">Đăng Nhập</button>
                <div class="dont-have-account">
                    <p>Bạn chưa có tài khoản? <a href="/Register">Đăng ký</a></p>
                </div>
            </div>
        </form>
    </section>
</main>

<div id="popup" class="modal" style="display: @(string.IsNullOrEmpty(ViewBag.ErrorMessage) ? "none" : "block")">
    <div class="modal-content">
        @ViewBag.ErrorMessage
        <span class="close-button" onclick="closePopup()">&times;</span>
    </div>
</div>


<script>
    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
    {
        <text>
            document.addEventListener("DOMContentLoaded", function () {
                openPopup();
            });
        </text>
    }
        function closePopup() {
            document.getElementById("popup").style.display = "none";
        }


</script>




@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }